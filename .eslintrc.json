{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@next/next/recommended",
		"standard"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	

	"rules": {
		"indent": [1, "tab"],
		"no-tabs": 0,
		"no-mixed-spaces-and-tabs": 0, 
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"no-unused-vars": 1,
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
		"react/no-unknown-property": [
			2,
			{
				"ignore": ["jsx", "global", "space"]
			}
		]
	}
}
